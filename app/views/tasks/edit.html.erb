<h1>Edit Task</h1>

<%= form_with model: @task do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :details %><br>
    <%= form.text_area :details %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

<%= link_to("Back to list", tasks_path) %>
