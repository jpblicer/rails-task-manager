<h1>Tasks</h1>
<ul>
  <% @tasks.each do |task| %>
  <li><%= link_to task.title, task %> -
  <%= link_to("Delete", task_path(task), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  }) %> </li>
  <% end %>
</ul>
<%= link_to "New Task", new_task_path %>
